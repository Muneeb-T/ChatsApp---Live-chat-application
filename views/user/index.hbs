<section>
    <div class="container-fluid">
        <div class="row">
            <img src="/images/Background/pnghut_communication-icon-chat-white.png" class="img-fluid chat-png">
            <div
                class="p-5 shadow-lg mb-5 rounded col-9 col-md-4 mx-auto position-absolute top-50 start-50 translate-middle text-center">
                <h1 class="mb-4 fw-bold"><span class="h3">Login To </span> ChatsApp</h1>
                <form name="loginForm" id="loginForm">
                    <div class="mb-4">
                        <input type="text" class="form-control" id="email_or_username" name="email_or_username"
                            placeholder="Email Address or Username">
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" id="password" name="password"
                            placeholder="Password">
                    </div>
                    <div class="mb-3">
                        <a href="/signUp">Create new account ?</a>
                    </div>
                    <div class="mb-3">
                        <p class="text-danger" id="login_error_message"></p>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>